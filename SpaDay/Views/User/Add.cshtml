
@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

@if (ViewBag.error != null)
{
    <p class="text-danger">@ViewBag.error</p>

}

<form method="post" action="/user">
    <div class="form-group">
        <label for="email">Email address</label>
        @if (ViewBag.error == null)
        {
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" placeholder="Enter email">

        }
        else
        {
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email" value="@ViewBag.email" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>

        }

    </div>

    <div class="form-group">
        <label for="username">Username</label>

        @if (ViewBag.error == null)
        {
            <input type="text" class="form-control" id="username" placeholder="username" name="username">

        }
        else
        {
            <input type="text" class="form-control" id="username" placeholder="username" name="username" value="@ViewBag.username">
        }

    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" placeholder="Password" name="password">
    </div>
    <div class="form-group">
        <label for="verify">Re-Enter Password</label>
        <input type="password" class="form-control" id="verify" placeholder="Password" name="verify">
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>

